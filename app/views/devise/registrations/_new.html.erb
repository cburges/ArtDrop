<h3 class="menu-title">Sign up</h3>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :first_name, label: 'First Name', required: true, autofocus: true %>
    <%= f.input :last_name, label: 'Last Name', required: true, autofocus: true %>
    <%= f.input :location, label: 'Location', required: true, autofocus: true %>
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :password, required: true, autofocus: true %>
    <%= f.input :password_confirmation, label: 'Password Confirmation', required: true, autofocus: true %>
    <div class="form-group">
      <img id="img_prev" width=300 height=300 src="#" alt="Profile Photo" class="img-thumbnail hidden"/> <br/>
      <span class="btn btn-default btn-file">
        <%= f.file_field :avatar, id: "avatar-upload" %>
      </span>
      <%= f.hidden_field :avatar_cache %>
    </div>
  <div class="actions">
    <%= f.button :submit, "Sign Up", :class => 'radius button' %>
  </div>
<% end %>
