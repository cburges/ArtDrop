<div class="form-container">
<h2>New Project:</h2>
<%= simple_form_for([@user,@project]) do |f| %>
<p>
  <%= f.label :title %><br>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :description %><br>
  <%= f.text_area :description %>
</p>

<p>
  <%= f.label :medium %><br>
  <%= f.text_field :medium %>
</p>

<p>
  <%= f.file_field :images, multiple: true %>
  <div class="form-group">
    <img id="img_prev" width=300 height=300 src="#" alt="your image" class="img-thumbnail hidden"/> <br/>
    <span class="btn btn-default btn-file">
      Upload Project Image<%= f.file_field :images, id: "images-upload" %>
    </span>
    <%= f.hidden_field :images_cache %>
  </div>
</p>

<p>
  <%= f.submit %>
</p>
<% end %>
</div>
